{
  "name": "thought",
  "version": "3.0.0",
  "description": "A customizable documentation generator for github projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/nknapp/thought.git"
  },
  "author": {
    "name": "Nils Knappmeier",
    "email": "npm@knappi.org",
    "url": "https://github.com/nknapp"
  },
  "bugs": {
    "url": "https://github.com/nknapp/thought/issues"
  },
  "main": "index.js",
  "bin": {
    "thought": "bin/thought.js"
  },
  "preferGlobal": true,
  "files": [
    "index.js",
    "customize.js",
    "lib",
    "handlebars",
    "bin"
  ],
  "license": "MIT",
  "scripts": {
    "format": "prettier --write '**/*.js'",
    "lint": "eslint --fix .",
    "test": "mocha && npm run lint",
    "coverage": "nyc --reporter=lcov --reporter=html --reporter=text-summary mocha",
    "postcoverage": "nyc check-coverage",
    "changelog": "standard-changelog && git add CHANGELOG.md",
    "thought": "bin/thought.js run -a",
    "postthought": "node examples/run-thought.js",
    "version": "npm run changelog && npm run thought"
  },
  "dependencies": {
    "archy": "^1.0.0",
    "commander": "^4.1.0",
    "customize": "^4.0.1",
    "customize-engine-handlebars": "^4.0.1",
    "customize-write-files": "^4.0.1",
    "debug": "^4.1.1",
    "deep-aplus": "^1.0.4",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "handlebars": "^4.7.2",
    "lodash.escaperegexp": "^4.1.2",
    "lodash.groupby": "^4.6.0",
    "pify": "^4.0.1",
    "semver": "^7.1.1",
    "simple-git": "^1.131.0",
    "trace-and-clarify-if-possible": "^1.0.5"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dirty-chai": "^2.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.1",
    "lint-staged": "^10.1.6",
    "lodash.isplainobject": "^4.0.6",
    "mocha": "^7.0.1",
    "nock": "^11.7.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "prettier-config-standard": "^1.0.1",
    "standard-changelog": "^2.0.21",
    "thought-plugin-jsdoc": "^2.0.0"
  },
  "keywords": [],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
