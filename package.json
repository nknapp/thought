{
  "name": "thought",
  "version": "1.0.2",
  "description": "A customizable documentation generator for github projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/nknapp/thought.git"
  },
  "author": {
    "name": "Nils Knappmeier",
    "email": "npm@knappi.org",
    "url": "https://github.com/nknapp"
  },
  "bugs": {
    "url": "https://github.com/nknapp/thought/issues"
  },
  "main": "index.js",
  "bin": {
    "thought": "bin/thought.js"
  },
  "preferGlobal": true,
  "files": [
    "index.js",
    "customize.js",
    "lib",
    "handlebars",
    "bin"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "eslint --fix .",
    "test": "mocha && npm run lint",
    "coverage": "istanbul cover ./node_modules/.bin/_mocha",
    "postcoverage": "istanbul check-coverage coverage/coverage.json --statements 100",
    "prethought": "thought --version || npm -g install thought",
    "thought": "thought run -a",
    "preversion": "thought --version || npm -g install thought",
    "version": "thoughtful changelog -o -a && npm run thought"
  },
  "dependencies": {
    "archy": "^1.0.0",
    "bluebird": "^3.5.0",
    "cheerio": "^0.22.0",
    "commander": "^2.8.1",
    "customize": "^2.0.0-alpha1",
    "customize-engine-handlebars": "^2.0.0-alpha.0",
    "customize-write-files": "^1.1.0",
    "debug": "^2.2.0",
    "find-package": "^1.0.0",
    "glob": "^7.0.5",
    "handlebars": "^4.0.5",
    "lodash.clonedeep": "^4.5.0",
    "lodash.escaperegexp": "^4.1.2",
    "lodash.groupby": "^4.6.0",
    "lodash.isplainobject": "^4.0.6",
    "lodash.map": "^4.6.0",
    "m-io": "^0.5.0",
    "popsicle": "^9.1.0",
    "semver": "^5.0.0",
    "simple-git": "^1.43.0",
    "trace-and-clarify-if-possible": "^1.0.0"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "chai-as-promised": "^6.0.0",
    "dirty-chai": "^1.2.2",
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-mocha": "^4.8.0",
    "eslint-plugin-node": "^4.2.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "husky": "^0.13.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nock": "^9.0.9",
    "recursive-copy": "^2.0.5",
    "thought-plugin-jsdoc": "^1.0.0",
    "thoughtful-release": "^0.3.0"
  },
  "standard": {
    "ignore": [
      "test/fixtures/**"
    ]
  },
  "keywords": []
}
